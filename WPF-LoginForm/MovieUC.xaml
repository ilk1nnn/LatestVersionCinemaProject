<UserControl x:Class="WPF_LoginForm.MovieUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_LoginForm"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Image Name="Poster" Source="Images/npa.jpg"></Image>
        </Grid>
        

        <Grid Grid.Row="1">
            <Label Content="Movie Name" Name="Title" Foreground="White" FontSize="18" FontWeight="Medium" HorizontalAlignment="Center"></Label>
        </Grid>
        
    </Grid>
</UserControl>
